<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/button1"
        android:background="@drawable/buttoncustom"
        android:textColor="#FAFAFA"


        android:layout_marginTop="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:onClick="clickFunc"
    />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/button2"
        android:background="@drawable/buttoncustom"
        android:textColor="#FAFAFA"

        android:layout_below="@+id/button1"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_marginTop="20dp"

        android:onClick="clickFunc"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/button3"
        android:background="@drawable/buttoncustom"
        android:textColor="#FAFAFA"

        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="20dp"

        android:onClick="clickFunc"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="BUILT IT BIGGER"
        android:id="@+id/button4"
        android:background="@drawable/buttoncustom"
        android:textColor="#FAFAFA"

        android:layout_below="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_marginTop="20dp"

        android:onClick="clickFunc"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/button5"
        android:background="@drawable/buttoncustom"
        android:textColor="#FAFAFA"

        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_marginTop="20dp"

        android:onClick="clickFunc"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/button6"
        android:background="@drawable/buttoncustom"
        android:textColor="#FAFAFA"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"

        android:onClick="clickFunc"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nano Degree Apps!"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
      android:textColor="#FFFF00"
        />
</RelativeLayout>
</ScrollView>